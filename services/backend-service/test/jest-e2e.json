{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    ".+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "moduleNameMapper": {
    "@common": "<rootDir>/src/common",
    "@entities": "<rootDir>/src/entities",
    "@modules/(.*)": "<rootDir>/src/modules/$1"
  },
  "testEnvironment": "node"
}
